mixin liNavItem(text,link)
  li.nav-item
    a.nav-link(href=link) #{text}


nav.navbar.navbar-expand-lg.navbar-dark
  div.collapse.navbar-collapse.d-flex.justify-content-between.mx-5.my-2#navbarSupportedContent
    ul.navbar-nav.me-auto.mb-2.mb-lg-0
      li.nav-item
        a.nav-link.active(aria-current="page" href="#") 30nama
      +liNavItem('Home','/home')
      if !user
        +liNavItem('Signup','/signup')
        +liNavItem('Login','/login')
      else
        +liNavItem(`Logout`,'/logout')
        +liNavItem(`${user.name} Is LoggedIn`,'/me')

    div.w-25
      form.d-flex
        input.form-control.me-2.w-50.mx-3(type="search" placeholder="Search" aria-label="Search")
        button.btn.btn-light(type='submit') Search