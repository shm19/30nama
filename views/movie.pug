extends base 

mixin reviewCard(review)
  .reviews__card
    .reviews__avatar
      if review.user.photo
        img.reviews__avatar-img(src=`/img/users/${review.user.slug}.jpeg` alt=review.user.name)
      else
      img.reviews__avatar-img(src=`/img/${review.user.gender}.jpeg` alt=review.user.name)
      h6.reviews__user= review.user.name
    p.reviews__text= review.review

    .rating
      i.fas.fa-star
      i.fas.fa-star
      i.fas.fa-star
      i.far.fa-star
      i.far.fa-star
    .review-info
      h3= review.user.email
      h3= new Date(review.createdAt).toDateString()
block headExt
  link(rel='stylesheet' href='/css/movie.css')

block content
  .card-container
    #tomb.movie_card
      .info_section
        .movie_header
          img.locandina(src=`/img/movies/${movie.slug}.jpeg` alt=movie.slug)
          .movie-info
            h1= movie.name
            h4= `${movie.productionYear}, ${movie.director}`
            - const hour = movie.time.split('-')[0];
            - const min = movie.time.split('-')[1];
            p= `${hour} ${min}`
            p= movie.genres.join(", ")
            p=`imdb: ${movie.imdbScore}` 
            .star-rating
              p 30nama Rate
              div
                i.fas.fa-star
                i.fas.fa-star
                i.fas.fa-star
                i.far.fa-star
                i.far.fa-star
            -casts = movie.stars.map(el => el.name).join(", ")
            p=`Casts: ${casts}` 
            p= movie.summery
      .blur_back(style=`background: url(/img/movies/${movie.slug}-bg.jpeg) no-repeat center/cover;`)

  .carousel-container
    button#prevBtn
      i.fas.fa-chevron-left
    button#nextBtn
      i.fas.fa-chevron-right
    .carousel-slide
      each review in reviews
        +reviewCard(review)

  script(src='/js/movie.js')
  script(src='https://kit.fontawesome.com/8bf0030466.js' crossorigin='anonymous')